<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопросы"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:id="@+id/questions_text"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questions_text">

        <CheckBox
            android:id="@+id/questions_list_checkbox"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            style="@style/CheckBoxStyle"
            android:layout_alignParentRight="true"/>

        <TextView
            style="@style/QuestionsTextStyle"
            android:id="@+id/questions_list_text"
            android:text="Какаим был арестотель до того, как его облили водой и скинули в море"
            />

    </RelativeLayout>

</RelativeLayout>



