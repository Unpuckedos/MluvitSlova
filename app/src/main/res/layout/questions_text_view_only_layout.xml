<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопросы"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:id="@+id/questions_text"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questions_text">

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questions_list_text"
            android:text="Какаим был арестотель до того, как его облили водой и скинули в море"
            android:maxEms="9"
            android:textSize="24sp"
            style="@style/BigButtonStyle"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/questions_list_checkbox"
            style="@style/CheckBoxStyle"/>
    </LinearLayout>

</RelativeLayout>



