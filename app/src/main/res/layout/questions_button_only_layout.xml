<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_element">

        <CheckBox
            android:id="@+id/questions_list_checkbox"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            style="@style/CheckBoxStyle"
            android:layout_alignParentRight="true"/>

        <Button
            style="@style/QuestionsTextStyle"
            android:id="@+id/questions_list_text"
            android:text="Какаим был арестотель до того, как его облили водой и скинули в море"
            />

    </RelativeLayout>

    <Button
        style="@style/BigButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_element"
        android:text="Готово"
        android:layout_marginTop="8dp"
        android:onClick="onGetResultQuestionsClick"
        android:id="@+id/questions_get_result_button"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>