<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <Button
        style="@style/BigButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:onClick="onGetResultQuestionsClick"
        android:id="@+id/questions_get_result_button"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/questions_get_result_button">

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questions_list_text"
            android:text="Какаим был арестотель до того, как его облили водой и скинули в море"
            android:maxEms="9"
            android:textSize="24sp"
            style="@style/BigButtonStyle"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/questions_list_checkbox"
            style="@style/CheckBoxStyle" />

    </LinearLayout>

</RelativeLayout>